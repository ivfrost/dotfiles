{
	"window.commandCenter": false,
	"workbench.layoutControl.enabled": false,
	"workbench.activityBar.location": "bottom",
	"window.menuBarVisibility": "toggle",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"editor.formatOnSave": true,
	"prettier.bracketSameLine": true,
	"prettier.experimentalTernaries": true,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.vueIndentScriptAndStyle": true,
	"github.copilot.chat.localeOverride": "en",
	"github.copilot.nextEditSuggestions.enabled": false,
	"editor.fontFamily": "Hack Nerd Font",
	"explorer.compactFolders": false,
	"editor.minimap.enabled": false,
	"github.copilot.nextEditSuggestions.fixes": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"liveServer.settings.donotShowInfoMsg": true,
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": true,
		"scminput": false,
		"typescriptreact": false,
	},
	"C_Cpp.clang_format_style": "file",
	"C_Cpp.clang_format_fallbackStyle": "Google",
	"window.restoreWindows": "all",
	"window.title": "${rootName} â€” ${appName}",

	"prettier.tabWidth": 2,
	"python.analysis.autoImportCompletions": true,
	"python.analysis.autoFormatStrings": true,
	"python.analysis.completeFunctionParens": true,
	"python.analysis.typeCheckingMode": "basic",
	"javascript.preferences.quoteStyle": "single",
	"typescript.preferences.quoteStyle": "single",
	"git.openRepositoryInParentFolders": "never",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"editor.autoClosingBrackets": "always",
	"workbench.iconTheme": "material-icon-theme",
	"extensions.ignoreRecommendations": true,
	"explorer.confirmDragAndDrop": false,
	"editor.multiCursorModifier": "alt",
	"extensions.experimental.affinity": {
		"asvetliakov.vscode-neovim": 1,
	},
	"chat.fontFamily": "Adwaita Sans",
	"notebook.markup.fontFamily": "Adwaita Sans",
	"markdown.preview.fontFamily": "'Adwaita Sans',  system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
	"typescript.suggest.completeFunctionCalls": true,
	"javascript.suggest.completeFunctionCalls": true,
	"editor.parameterHints.enabled": false,
	"workbench.editor.empty.hint": "hidden",
	"editor.tabSize": 2,
	"chat.viewSessions.orientation": "stacked",
	"keyboard.dispatch": "keyCode",
	"terminal.integrated.fontLigatures.enabled": false,
	"editor.fontLigatures": false,
	"window.titleBarStyle": "custom",
	"editor.renderLineHighlight": "none",
	"window.controlsStyle": "custom",
	"scm.inputFontSize": 14,
	"window.customTitleBarVisibility": "windowed",
	"window.enableMenuBarMnemonics": false,
	"workbench.editor.enablePreview": false,
	"liveServer.settings.CustomBrowser": "firefox",
	"editor.fontSize": 14,
	"editor.fontWeight": "400",
	"editor.lineHeight": 1.4,
	"github.copilot.chat.copilotMemory.enabled": true,
	"editor.allowVariableFonts": false,
	"chat.fontSize": 14,
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.labelFormat": "medium",
	"workbench.preferredLightColorTheme": "Atom One Light",
	"window.autoDetectColorScheme": true,
	"editor.stickyScroll.enabled": true,
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/.git": true,
	},
	"json.schemaDownload.trustedDomains": {
		"https://schemastore.azurewebsites.net/": true,
		"https://raw.githubusercontent.com/": true,
		"https://www.schemastore.org/": true,
		"https://json.schemastore.org/": true,
		"https://json-schema.org/": true,
		"https://biomejs.dev": true,
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.fixAll.biome": "explicit",
	},
	"workbench.preferredDarkColorTheme": "One Dark Pro",
}
