# ivfrost's sway config

### Variables
set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu wofi --show drun

### Key bindings
# Basics
bindsym $mod+Shift+Return exec $term
bindsym $mod+Shift+c kill
bindsym $mod+Shift+d exec nemo 
bindsym Ctrl+Shift+d exec $menu
bindsym Ctrl+Shift+s reload
bindsym Ctrl+Shift+e exec $HOME/.config/waybar/scripts/toggle-theme.sh
bindsym Ctrl+Shift+b exec pkill -x waybar && waybar
bindsym Ctrl+Shift+w exec $HOME/.config/sway/scripts/rand-wallpaper.sh
bindsym Ctrl+Shift+h exec cliphist list | wofi --dmenu --width 760 --pre-display-cmd "echo '%s' | cut -f 2" | cliphist decode | wl-copy 
bindsym Ctrl+Shift+q exec $HOME/.config/dotfiles/waybar/scripts/power-menu.sh
bindsym Ctrl+Shift+n exec swaync-client -t -sw
floating_modifier $mod normal

# Moving focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Moving windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Workspaces
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8

# Layout
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+m exec ~/.config/sway/scripts/monocle.sh

# Screen orientation
bindsym $mod+Ctrl+Shift+Right exec swaymsg output $(swaymsg -t get_outputs | jq -r '.[].name') transform 90
bindsym $mod+Ctrl+Shift+Left exec swaymsg output $(swaymsg -t get_outputs | jq -r '.[].name') transform 270
bindsym $mod+Ctrl+Shift+Up exec swaymsg output $(swaymsg -t get_outputs | jq -r '.[].name') transform normal
bindsym $mod+Ctrl+Shift+Down exec swaymsg output $(swaymsg -t get_outputs | jq -r '.[].name') transform 180

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Resize mode
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Utilities
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && ~/.config/waybar/scripts/microphone-popup.sh
bindsym --locked shift+XF86AudioRaiseVolume exec pactl set-source-volume @DEFAULT_SOURCE@ +5% && ~/.config/waybar/scripts/microphone-popup.sh
bindsym --locked shift+XF86AudioLowerVolume exec pactl set-source-volume @DEFAULT_SOURCE@ -5% && ~/.config/waybar/scripts/microphone-popup.sh
bindsym XF86MonBrightnessUp exec brightnessctl set +5% && ~/.config/waybar/scripts/brightness-popup.sh
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && ~/.config/waybar/scripts/brightness-popup.sh
bindsym Ctrl+space exec swaymsg input type:keyboard xkb_switch_layout next && $HOME/.config/waybar/scripts/keyboard-popup.sh
bindsym Print exec ~/.config/sway/scripts/screenshot.sh
bindsym Shift+Print exec ~/.config/sway/scripts/screenshot.sh selection

# Quick launch
bindsym $mod+Shift+x exec firefox -P default-release
bindsym $mod+Shift+m exec firefox -P wa 
bindsym $mod+Shift+e exec firefox -P md
bindsym $mod+Shift+b exec torbrowser-launcher
bindsym $mod+Shift+p exec keepassxc
bindsym $mod+Shift+v exec code
bindsym $mod+Shift+i exec ~/.local/share/JetBrains/Toolbox/apps/intellij-idea-ultimate/bin/idea.sh
bindsym $mod+Shift+o exec flatpak run org.onlyoffice.desktopeditors


### Appearance
output HDMI-A-3 scale 1 adaptive_sync on
output eDP-1 scale 1.1 adaptive_sync on
default_border pixel 2
default_floating_border pixel 2
gaps inner 4
corner_radius 10
shadows enable
shadows_on_csd false
shadow_color #00000022
shadow_offset 4 4
shadow_blur_radius 10
font pango:Noto Sans 11

focus_follows_mouse no
input * {
    xkb_layout "us,es"
    xkb_options "caps:escape"
    xkb_options "escape:caps"
}

smart_borders on
smart_gaps on

### Startup
exec lxpolkit
exec waybar
exec swaync
exec wmname LG3D
set $term /usr/bin/alacritty
set $term_cwd $term --working-directory "$(swaycwd 2>/dev/null || echo $HOME)"
exec ~/.config/sway/scripts/rand-wallpaper.sh
exec ~/.config/waybar/scripts/pulseaudio-monitor.sh
exec wl-paste --watch cliphist store &

### Blur effects
blur disable 
blur_xray disable
blur_radius 6
blur_passes 4

layer_effects "waybar" {
    blur enable;
    blur_xray enable;
    blur_ignore_transparent enable;
    shadows false;
}

layer_effects "swaync-control-center" {
    shadows enable;
    shadow_color #000000dd;
}

layer_effects "swaync-notification-window" {
    shadows enable;
    shadow_color #000000dd;
}

### Input
input "type:touchpad" {
    tap enabled
    tap_button_map lmr
    natural_scroll enabled
    dwt enabled
    drag enabled
    drag_lock disabled
}

### Idle
exec swayidle -w \
    timeout 900 'swaylock -f -c 000000' \
    timeout 1000 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000'

### Workspace assignments
# IDEs / Terminals
assign [app_id="alacritty"] → 2
assign [app_id="code"] → 2              
assign [class="jetbrains-idea"] → 2  
assign [class="android-studio"] → 2

# Reading / Writing
assign [app_id="onlyoffice"] → 5
assign [app_id="libreoffice"] → 5
assign [app_id="okular"] → 5

# Media
assign [app_id="transmission-gtk"] → 6 

# Tor

### Window rules
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="firefox" title="^Page Info.*"] floating enable
for_window [app_id="keepassxc"] floating enable
for_window [app_id="firefox" title="^Open File"] floating enable
for_window [app_id="firefox" title="^Save As"] floating enable
for_window [app_id="code" title="^Open Folder"] floating enable


### Includes
include ~/.config/sway/colors
include /etc/sway/config.d/*
